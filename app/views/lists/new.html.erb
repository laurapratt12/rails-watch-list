<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-4 shadow-sm">
        <h3 class="mb-4 text-center">Create a New List</h3>
        <%= simple_form_for @list do |f| %>
          <div class="form-group mb-4">
            <%= f.input :name, label_html: { class: 'form-label' }, placeholder: 'Your list name', input_html: { class: 'form-control' } %>
          </div>
          <div class="text-center">
            <%= f.submit 'Create List', class: 'btn btn-primary btn-md px-5' %>
          </div>
        <% end %>
      </div>
      <div class="text-center mt-3">
        <%= link_to 'Back', root_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
</div>
